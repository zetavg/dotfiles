[color]
  diff = auto
  status = auto
  branch = auto
  log = auto
  ui = true
[alias]
  c = checkout
  co = checkout
  a = add
  aa = add --update
  stage = add
  unstage = reset HEAD
  cm = commit --verbose
  amend = commit --verbose --amend
  s = status
  b = branch
  d = diff
  r = remote
  f = fetch
  pm = pull
  pr = pull --rebase
  rs = reset --soft
  rh = reset --hard
  l = log --pretty=format:\"[%h] %s  -- %an, %ar\" --graph
[include]
  path = ~/.dotfiles/secret/_gitconfig
